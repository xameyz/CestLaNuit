<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>logServlet</servlet-name>
        <servlet-class>servlet.logServlet</servlet-class>
        <!-- Les identifiants pour se connecter -->
        <init-param>
            <param-name>login</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123</param-value>
        </init-param>
        <init-param>
            <param-name>userName</param-name>
            <param-value>admin</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>deleteOrderServlet</servlet-name>
        <servlet-class>servlet.deleteOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>customerServlet</servlet-name>
        <servlet-class>servlet.customerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>servlet.adminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addOrderServlet</servlet-name>
        <servlet-class>servlet.addOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateOrderServlet</servlet-name>
        <servlet-class>servlet.updateOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>salesByProductCatServlet</servlet-name>
        <servlet-class>servlet.salesByProductCatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>salesByGeoServlet</servlet-name>
        <servlet-class>servlet.salesByGeoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>salesByCustomerServlet</servlet-name>
        <servlet-class>servlet.salesByCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logServlet</servlet-name>
        <url-pattern>/logServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteOrderServlet</servlet-name>
        <url-pattern>/deleteOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customerServlet</servlet-name>
        <url-pattern>/customerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addOrderServlet</servlet-name>
        <url-pattern>/addOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateOrderServlet</servlet-name>
        <url-pattern>/updateOrderServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>ProtectedCustomerPagesFilter</filter-name>
        <filter-class>filters.ProtectedCustomerPagesFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ProtectedAdminPageFilter</filter-name>
        <filter-class>filters.ProtectedAdminPageFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProtectedAdminPageFilter</filter-name>
        <url-pattern>/protectedAdmin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ProtectedCustomerPagesFilter</filter-name>
        <url-pattern>/protectedCustomer/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>salesByProductCatServlet</servlet-name>
        <url-pattern>/salesByProductCatServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>salesByGeoServlet</servlet-name>
        <url-pattern>/salesByGeoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>salesByCustomerServlet</servlet-name>
        <url-pattern>/salesByCustomerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
    <welcome-file>logServlet</welcome-file>
</welcome-file-list>
</web-app>
